# File: docker/.env.example

# MongoDB Configuration
MONGODB_ROOT_USER=root
MONGODB_ROOT_PASSWORD=your_secure_mongodb_password
MONGODB_DATABASE=taskverse

# MongoDB Express Configuration
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=your_secure_admin_password

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_jwt_secret_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# S3/File Storage Configuration
S3_BUCKET=taskverse-files
S3_REGION=us-east-1

# Application Configuration
NODE_ENV=production